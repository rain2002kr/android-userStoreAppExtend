<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <TextView
        android:id="@+id/chatRoomTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="아이템 정보 이름"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="8,000 원"
        app:layout_constraintTop_toBottomOf="@+id/chatRoomTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/nickNameTitleTextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="닉네임"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/itemPriceTextView"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/lastMessageTextView"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="네, 혹시 구매 하실건가요?나의 살던 고향은꽃피는산골"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/nickNameTitleTextView"
        app:layout_constraintStart_toEndOf="@+id/nickNameTitleTextView"
        />

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>